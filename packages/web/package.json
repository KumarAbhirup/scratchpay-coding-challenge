      "<rootDir>/node_modules/",
      "$sass"
    ],
    "transform": {
      ".*": "babel-jest"
    },
    "moduleNameMapper": {
      ".sass$": "<rootDir>/lib/scssStubForJest.js",
      ".scss$": "<rootDir>/lib/scssStubForJest.js"
    }
  }
